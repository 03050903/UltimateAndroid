<?xml version="1.0" encoding="utf-8"?>
<resources  xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="WeekView">
        <attr name="firstDayOfWeek" format="enum">
            <enum name="sunday" value="1"/>
            <enum name="monday" value="2"/>
            <enum name="tuesday" value="3"/>
            <enum name="wednesday" value="4"/>
            <enum name="thursday" value="5"/>
            <enum name="friday" value="6"/>
            <enum name="saturday" value="7"/>
        </attr>
        <attr name="hourHeight" format="dimension"/>
        <attr name="weekTextSize" format="dimension"/>
        <attr name="eventTextSize" format="dimension"/>
        <attr name="headerColumnPadding" format="dimension"/>
        <attr name="headerRowPadding" format="dimension"/>
        <attr name="columnGap" format="dimension"/>
        <attr name="headerColumnTextColor" format="color"/>
        <attr name="noOfVisibleDays" format="integer"/>
        <attr name="headerRowBackgroundColor" format="color"/>
        <attr name="dayBackgroundColor" format="color"/>
        <attr name="hourSeparatorColor" format="color"/>
        <attr name="todayBackgroundColor" format="color"/>
        <attr name="todayHeaderTextColor" format="color"/>
        <attr name="hourSeparatorHeight" format="dimension"/>
        <attr name="eventTextColor" format="color"/>
        <attr name="eventPadding" format="dimension"/>
        <attr name="headerColumnBackground" format="color"/>
        <attr name="dayNameLength" format="enum">
            <enum name="length_short" value="1"/>
            <enum name="length_long" value="2"/>
        </attr>

    </declare-styleable>


    <attr name="arcFromDegrees" format="float|reference"/>
    <attr name="arcToDegrees" format="float|reference"/>
    <attr name="arcChildSize" format="dimension|reference"/>



    <declare-styleable name="ArcLayout">
        <attr name="arcFromDegrees"/>
        <attr name="arcToDegrees"/>
        <attr name="arcChildSize"/>
    </declare-styleable>


    <declare-styleable name="ArcMenu">
        <attr name="arcFromDegrees"/>
        <attr name="arcToDegrees"/>
        <attr name="arcChildSize"/>
    </declare-styleable>

    <declare-styleable name="RayLayout">
        <attr name="arcLeftHolderWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BlurDrawerLayout">
        <attr name="blurRadius" format="integer"/>
        <attr name="downScaleFactor" format="float"/>
        <attr name="drawerUpImageId" format="reference"/>
        <attr name="openDescription" format="reference"/>
        <attr name="closeDescription" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DayPickerView">
        <attr name="dpv_colorCurrentDay" format="color"/>
        <attr name="dpv_colorSelectedDayBackground" format="color"/>
        <attr name="dpv_colorSelectedDayText" format="color"/>
        <attr name="dpv_colorPreviousDay" format="color"/>
        <attr name="dpv_colorNormalDay" format="color"/>
        <attr name="dpv_colorMonthName" format="color"/>
        <attr name="dpv_colorDayName" format="color"/>
        <attr name="dpv_textSizeDay" format="dimension"/>
        <attr name="dpv_textSizeMonth" format="dimension"/>
        <attr name="dpv_textSizeDayName" format="dimension"/>
        <attr name="dpv_headerMonthHeight" format="dimension"/>
        <attr name="dpv_selectedDayRadius" format="dimension"/>
        <attr name="dpv_calendarHeight" format="dimension"/>
        <attr name="dpv_enablePreviousDay" format="boolean"/>
        <attr name="dpv_startCurrentMonth" format="boolean"/>
        <attr name="dpv_currentDaySelected" format="boolean"/>
        <attr name="dpv_drawRoundRect" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CalendarPickerView">
        <attr name="android:background"/>
        <attr name="dividerColor" format="color"/>
        <attr name="dayBackground" format="reference"/>
        <attr name="dayTextColor" format="color"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="headerTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="calendar_cell">
        <attr name="state_selectable" format="boolean"/>
        <attr name="state_current_month" format="boolean"/>
        <attr name="state_today" format="boolean"/>
        <attr name="state_range_first" format="boolean"/>
        <attr name="state_range_middle" format="boolean"/>
        <attr name="state_range_last" format="boolean"/>
        <attr name="state_highlighted" format="boolean"/>
    </declare-styleable>
</resources>